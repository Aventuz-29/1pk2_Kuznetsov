<Window x:Class="Task_38_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_38_04"
        mc:Ignorable="d"
        Title="Информации о студенте" Height="400" Width="800"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <UniformGrid Columns="2" Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Фамилия"
                   Grid.Row="0"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>
            <Label Content="Имя"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>
            <Label Content="Отчество"
                   Grid.Row="2"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>
            <Label Content="Группа"
                   Grid.Row="3"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>
            <Label Content="Пол"
                   Grid.Row="4"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>
            <Label Content="Дата рождения"
                   Grid.Row="5"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>
            <DatePicker Name="YearDatePicker"
                        IsDropDownOpen="False"
                        SelectedDateFormat="Short"
                        Grid.Column="1"
                        Grid.Row="5"/>
            <TextBox x:Name="surnameTextBox"
                     Grid.Row="0"
                     Grid.Column="1"
                     Margin="5"/>
            <TextBox x:Name="NameTextBox"
                     Grid.Row="1"
                     Grid.Column="1"
                     Margin="5"/>
            <TextBox x:Name="PatronymicTextBox"
                     Grid.Row="2"
                     Grid.Column="1"
                     Margin="5"/>
            <TextBox x:Name="GroupTextBox"
                     Grid.Row="3"
                     Grid.Column="1"
                     Margin="5"/>
            <ComboBox
                x:Name="PaulComboBox"
                Grid.Row="4"
                Grid.Column="1"
                Margin="5">
                <ComboBoxItem Content="Мужской"/>
                <ComboBoxItem Content="Женский"/>
            </ComboBox>
            <UniformGrid Columns="2"
                Grid.Row="6"
                Grid.Column="1">
                <Button x:Name="SaveButton"
                        Content="Сохранить"
                        Padding="5"
                        Margin="5,10,5,0"
                        IsDefault="True"
                        Click="SaveButton_Click"/>
                <Button x:Name="ClearButton"
                        Content="Очистить"
                        Padding="5"
                        Margin="5,10,5,0"
                        IsCancel="True"
                        Click="ClearButton_Click"/>
            </UniformGrid>
        </Grid>
        <ListBox x:Name="StudentssListBox"/>
    </UniformGrid>
</Window>
